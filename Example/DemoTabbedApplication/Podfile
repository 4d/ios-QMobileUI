platform :ios, '10.0'

target 'DemoTabbedApplication' do
  use_frameworks!

  pod 'QMobileDataStore', :path => '../../../QMobileDataStore'
  pod 'QMobileDataSync', :path => '../../../QMobileDataSync'
  pod 'QMobileAPI', :path => '../../../QMobileAPI'
  pod 'QMobileUI', :path => '../../'


  pod 'XCGLogger/UserInfoHelpers'

  pod 'SwiftyJSON'

  pod 'Kingfisher'
  pod 'IBAnimatable'
  pod 'Guitar'
  pod 'ValueTransformerKit'
  pod 'RandomKit'
  pod 'BrightFutures'
  
  pod 'SwiftMessages'

# for monitoring
  pod 'Watchdog' # remove with xcode 9 ???
  pod 'PinpointKit/ScreenshotDetector'

# in dev
  pod 'AZDialogView'
  pod 'LinearProgressBarMaterial'


# in debuging
pod 'NSLogger'
pod 'XCGLoggerNSLoggerConnector'

  pod 'StyleKit', :git => 'https://github.com/146BC/StyleKit.git', :branch => 'develop'

end

post_install do |installer|
    puts "Updating all targets OTHER_SWIFT_FLAGS to add debug flag to Debug build config"
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            if config.name == "Debug"
                config.build_settings['OTHER_SWIFT_FLAGS'] ||= ['$(inherited)']
                if !config.build_settings['OTHER_SWIFT_FLAGS'].include? " \"-D\" \"DEBUG\""
                    config.build_settings['OTHER_SWIFT_FLAGS'] << " \"-D\" \"DEBUG\""
                end
            end
        end
    end
end
